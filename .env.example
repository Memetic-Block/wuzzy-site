# Wuzzy Site Environment Variables
# Copy this file to .env.local and configure for your environment

# Required: GraphQL endpoint for Arweave queries (Goldsky)
VITE_GQL_ENDPOINT=https://arweave-search.goldsky.com/graphql

# Required: Primary nest ID for homepage search
VITE_PRIMARY_NEST_ID=your-primary-nest-process-id

# Required: Wuzzy Nest Registry Process ID
VITE_REGISTRY_PROCESS_ID=your-registry-process-id

# Required: Hyperbeam endpoint for distributed search
VITE_HYPERBEAM_ENDPOINT=https://hyperbeam.arweave.net

# Required: Search API endpoint
VITE_SEARCH_API_URL=https://api.wuzzy.xyz

# Optional: Analytics Goblin API endpoint (for GDPR-compliant analytics)
# Leave empty to disable analytics tracking
# Example: http://localhost:3001 for local development
VITE_ANALYTICS_API_URL=

# Build metadata (auto-generated in CI/CD)
VITE_RELEASE_TAG=development
VITE_VERSION_SHA=local
VITE_VERSION_TIMESTAMP=
